generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  transactions Transaction[]
  categories   Category[]
  piggyBanks   PiggyBank[]
  budgets     Budget[]
}

model Category {
  id          String       @id @default(uuid())
  name        String
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id          String     @id @default(uuid())
  amount      Float
  type        String     // "income" | "expense"
  date        DateTime   @default(now())
  note        String?
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  piggyBankId String?
  piggyBank   PiggyBank? @relation(fields: [piggyBankId], references: [id])
}

model PiggyBank {
  id             String        @id @default(uuid())
  name           String
  goal           Float?
  currentBalance Float         @default(0)
  isDefault      Boolean       @default(false)
  userId         String
  user           User          @relation(fields: [userId], references: [id])
  transactions   Transaction[]
}

model Budget {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  periodType      String   // "month" | "week" | "day"
  periodStartDate DateTime // Start date of the period
  initialBudget   Float    // The budget amount shown to user when first transaction was added
  createdAt       DateTime @default(now())
  
  @@unique([userId, periodType, periodStartDate])
}
